{
  "include": ["./packages/"],
  "compilerOptions": {
    "target": "ES2016",
    "jsx": "preserve",
    "module": "CommonJS",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
